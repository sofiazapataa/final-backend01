<h1>Detalle del producto</h1>

<p><b>{{product.title}}</b></p>
<p>Precio: ${{product.price}}</p>
<p>Categoría: {{product.category}}</p>
<p>Disponible: {{product.status}}</p>
<p>Stock: {{product.stock}}</p>
<p>Descripción: {{product.description}}</p>

{{#if cid}}
  <form method="post" action="/api/carts/{{cid}}/product/{{product._id}}">
    <button type="submit">Agregar al carrito</button>
  </form>
{{else}}
  <p style="color:gray;">
    Para agregar al carrito, entrá con <b>?cid=TU_CART_ID</b>
  </p>
{{/if}}

<p><a href="/products{{#if cid}}?cid={{cid}}{{/if}}">Volver</a></p>
